<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:id="@+id/list_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/ic_background_card">

        <ImageView
            android:id="@+id/gambarsepeda"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:src="@drawable/bycicle"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvNamaSepeda"
            />


        <LinearLayout
            android:padding="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvKodesepeda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KODE"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Sepeda"
                    android:gravity="left"
                    android:textSize="10sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="left"
                    android:textSize="10sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvMerkSepeda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wimcycle"
                    android:paddingLeft="7dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Sewa"
                    android:gravity="left"
                    android:textSize="10sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="left"
                    android:textSize="10sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvHargaSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:text="Rp.500.000.00"
                    android:textColor="#3F51B5"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>